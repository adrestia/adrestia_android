<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calvinkwan.college_confession">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.calvinkwan.college_confession.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.calvinkwan.college_confession.Confessions_List_display"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.calvinkwan.college_confession.RegisterActivity"
            android:screenOrientation="portrait">
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.calvinkwan.college_confession.MainActivity" />
        </activity>
        <activity
            android:name="com.calvinkwan.college_confession.PostConfession"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.calvinkwan.college_confession.Confessions_List_display" />
        </activity>
        <activity android:name="com.calvinkwan.college_confession.CommentsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.calvinkwan.college_confession.Confessions_List_display" />
        </activity>
    </application>

</manifest>