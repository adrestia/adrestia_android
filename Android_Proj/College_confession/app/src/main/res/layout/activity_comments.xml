<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginRight="35dp"
        android:textSize="20sp"
        android:text="&quot;I just did something bad&quot; hello world is amazings balls guys i am so sleepy"
        android:id="@+id/body"
        android:textColor="@color/black"
        android:maxLines="1000"
        android:scrollbars="vertical"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/i">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30 mins"
            android:id="@+id/minSincePost"
            android:layout_marginStart="43dp"
            android:layout_alignTop="@+id/CommentReport"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/CommentReport"
            android:scaleType="center"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginStart="100dp"
            android:layout_marginTop="78dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/minSincePost" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/PostBTTN"
            android:layout_marginTop="24dp">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/CommentUpvote"
                android:onClick="CommentPostUpvoting"
                android:background="@mipmap/ic_arrow_upward_black"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:focusable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp" />


            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/CommentDownvote"
                android:layout_marginTop="19dp"
                android:onClick="CommentPostDownvoting"
                android:focusable="false"
                android:clickable="true"
                android:background="@mipmap/ic_arrow_downward_black"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/CommentVoteScore"
                android:layout_alignStart="@+id/CommentUpvote" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="20"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:id="@+id/CommentVoteScore"
                android:layout_below="@+id/CommentUpvote"
                android:layout_alignEnd="@+id/CommentUpvote" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/textView"
                android:layout_below="@+id/CommentDownvote"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46dp" />
        </RelativeLayout>



        <ListView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/commentList"
            android:layout_below="@+id/CommentReport"
            android:layout_alignParentStart="true"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/PostBTTN" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:onClick="PostComment"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/PostBTTN" />


    </RelativeLayout>


</RelativeLayout>